<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_button_container">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:padding="8dp"
                android:id="@+id/resultTextView"
                android:text="Result Appears Here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:background="@color/green_100"
        android:id="@+id/layout_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="12dp">

        <Button
            android:id="@+id/excelViewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/google_green"
            android:padding="12dp"
            android:text="Open In Excel Format"
            android:textColor="@color/quantum_white_100" />
    </LinearLayout>
</RelativeLayout>